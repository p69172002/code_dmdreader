{
  "general": {
    "cwd_to_configdir": true,
    "skip_unmodified_frames": true,
    "terminate_when_finished": true,
    "bitsperpixel":  4
  },
  "source": {
    "spi": {
      "device": "/dev/spidev0.0",
      "notify_gpio": 7,
      "speed": 4000000
    },
    "dat": {
      "name": "../samples/spiimage-ghostbusters3.dat"
    },
    "txt": {
      "name": "../samples/ghostbusters.txt",
      "use_timing_data":  true
    },
    "null": {
    }
  },
  "processor": {
    "frameinfo": {
    },
    "store": {
      "filename": "../output.txt",
      "ignore_duplicates": true,
      "async": true
    },
    "pin2dmd": {
      "basename": "../samples/ghostbusters"
    },
    "pubcapture": {
      "directory": "../samples/gbpub/"
    },
    "palette": {
      "colors": 16,
      "red": 0,
      "green": 255,
      "blue": 0
    }
  },
  "renderer": {
    "opengl": {
      "width": 1920,
      "height": 1080,
      "dmd_x": 0,
      "dmd_y": 0,
      "dmd_width": 1920,
      "dmd_height": 480,
      "overlay_texture": "img/circle_blurred.png",
      "scale_linear": false,
      "display": true,
      "display_number": 0
    }
  },
  "service": {
    "pupplayer": {
      "directory": "samples/gb_x265_b2s",
      "screens": [
        {
          "screenNum": 2,
          "type": "fb"
        },
        {
          "screenNum": 11,
          "type": "video"
        },
        {
          "screenNum": 12,
          "type": "video"
        }
      ]
    },
    "pupeventplayback": {
      "events": [
        {
          "timestamp": 2000,
          "event": "trigger:D1"
        },
        {
          "timestamp": 3000,
          "event": "trigger:D2"
        },
        {
          "timestamp": 4000,
          "event": "trigger:D3"
        },
        {
          "timestamp": 5000,
          "event": "trigger:D5"
        },
        {
          "timestamp": 6000,
          "event": "trigger:D16"
        },
        {
          "timestamp": 16000,
          "event": "trigger:D17"
        },
        {
          "timestamp": 17000,
          "event": "trigger:D18"
        },
        {
          "timestamp": 18000,
          "event": "trigger:D19"
        }
      ]
    }
  }
}